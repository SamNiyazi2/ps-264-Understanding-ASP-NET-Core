@model PS_FishTankApp_M02.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "Fish Tank Dashboard";
}


<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1>Dashboard</h1>
        </div>
    </div>
    <div class="row">
        @Html.DisplayFor(m => m.WaterTempreatureTile)
        @Html.DisplayFor(m => m.FishMotionTile)
        @Html.DisplayFor(m => m.WaterOpacityTile)
        @Html.DisplayFor(m => m.LightIntensityTile)
    </div>

    <div class="row">
        <div class="col-lg-6">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <div class="row">

                        <form asp-controller="home" asp-action="feed" method="post">




                            <div class="col-lg-7">

                                <label asp-for="FoodAmount"></label>

                                <span class="small">
                                    <label asp-for="LastFed"></label>
                                    @Model.LastFed
                                </span>

                            </div>




                            <div class="col-lg-2">
                                <input type="number" asp-for="FoodAmount" class="form-control " min="0" max="10" />
                            </div>


                            <div class="xcol-lg-3">

                                <span class="center">

                                    <button type="submit" class="btn btn-primary input-lg" style="width:100px">
                                        Feed!
                                    </button>

                                </span>

                            </div>

                        </form>

                    </div>
                </div>
            </div>

        </div>

    </div>
</div>
